@tailwind base;
@tailwind components;
@tailwind utilities;

@font-face {
	/* Reference name */
	font-family: 'Montserrat';
	/* For multiple files use commas, ex: url(), url(), ... */
	src: url('/fonts/Montserrat-VariableFont_wght.ttf'),
		url('/fonts/Montserrat-Italic-VariableFont_wght.ttf');
}

body {
	font-family: 'Montserrat', sans-serif;
}

h2 {
	font-size: 2rem;
	font-weight: 600;
	line-height: 2rem;
}

.btn {
	@apply font-semibold py-2 px-4 rounded-md text-center;
}

.btn-primary {
	@apply bg-ts-blue text-white text-sm;
}

.section-header {
	@apply mb-4;
}
.debris {
	width: 100%;
}

h1 {
	@apply text-4xl font-bold;
}

h2 {
	@apply text-3xl font-semibold;
}
