generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("DATABASE_URL_DEV")
  relationMode      = "prisma"
}

model Ratesheet {
  id               String          @id @default(uuid())
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  name             String          @unique
  title            String
  subtitle         String          @db.Text
  lowMileageCutoff String?
  isVocational     Boolean?        @default(false)
  disclosuresSetId String?
  coveragesSetId   String?
  rows             Row[]
  options          Option[]
  disclosuresSet   DisclosuresSet? @relation(fields: [disclosuresSetId], references: [id])
  coveragesSet     CoveragesSet?   @relation(fields: [coveragesSetId], references: [id])

  @@index([name])
  @@index([disclosuresSetId])
  @@index([coveragesSetId])
}

model Row {
  id                 String    @id @default(uuid())
  termValue          String
  termUnit           String
  mileageValue       String
  costNewerLowMiles  String
  costNewerHighMiles String?
  costOlderLowMiles  String?
  costOlderHighMiles String?
  deductible         String
  aggregateLimit     String
  truckType          String?
  ratesheetId        String
  ratesheet          Ratesheet @relation(fields: [ratesheetId], references: [id])

  @@index([ratesheetId])
}

model Option {
  id                 String    @id @default(uuid())
  packageName        String
  termValue          String
  termUnit           String
  cost               String
  ratesheetId        String
  refrigerationHours String?   @default("")
  ratesheet          Ratesheet @relation(fields: [ratesheetId], references: [id])

  @@index([ratesheetId])
}

model DisclosuresSet {
  id          String       @id @default(uuid())
  name        String
  disclosures Disclosure[]
  ratesheet   Ratesheet[]
}

model Disclosure {
  id               String         @id @default(uuid())
  title            String
  description      String         @db.Text
  order            String
  disclosuresSetId String
  disclosuresSet   DisclosuresSet @relation(fields: [disclosuresSetId], references: [id])

  @@index([disclosuresSetId])
}

model CoveragesSet {
  id        String      @id @default(uuid())
  name      String
  coverages Coverage[]
  ratesheet Ratesheet[]
}

model Coverage {
  id             String       @id @default(uuid())
  title          String
  description    String       @db.Text
  order          String
  coveragesSetId String
  coveragesSet   CoveragesSet @relation(fields: [coveragesSetId], references: [id])

  @@index([coveragesSetId])
}

model RateOutput {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  userId      String   @default("")
  label       String   @default("")
  ratesheetId String
  color       String   @default("primary")
  logoUrl     String?
  markups     Markup[]
}

model Markup {
  id           String     @id @default(uuid())
  termValue    String
  markupValue  String
  rateOutputId String
  rateOutput   RateOutput @relation(fields: [rateOutputId], references: [id])

  @@index([rateOutputId])
}
